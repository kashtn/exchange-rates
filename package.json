{
  "engines": {
    "node": "14.x",
    "yarn": "1.x",
    "npm": "6.x"
  },
  "dependencies": {
    "concurrently": "^5.3.0",
    "dotenv": "^8.2.0",
    "mongoose": "^5.11.0",
    "react-redux": "^7.2.2",
    "redux": "^4.0.5",
    "redux-devtools-extension": "^2.13.8",
    "redux-thunk": "^2.3.0",
    "victory": "^35.4.0"
  },
  "scripts": {
    "front": "cd front && yarn start",
    "back": "cd back && yarn start",
    "start": "concurrently --kill-others-on-fail \"yarn front\" \"yarn back\"",
    "build": "cd front && npm run build",
    "install-client": "cd front && npm install",
    "heroku-postbuild":"npm run install-client && npm run build"
  }
}
